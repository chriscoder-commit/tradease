<%#this is the edit form field that users can access through the edit function. note the additional fields so users can tailor their profile to provide trade info.%>
<div>
  <% if @profile.errors.any? %>
    <%= @profile.errors.full_messages %>
  <% end %>
</div>


<%= form_with model: @profile, local: true do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, length: {minimum: 3}, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= form.label :user_description %>
    <%= form.text_field :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :place_of_business %>
    <%= form.text_field :place_of_business, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :about_me %>
    <%= form.text_field :about_me, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :skills_list %>
    <%= form.select :skills, options_for_select(Profile.skills.keys), class: 'form-control checkbox' %>
  </div>

  <div class="form-group">
    <%= form.submit id: "submit" %>
  </div>
<% end %>
</div>





