<div>
  <%= form_with model: @listing, local: true do |form| %>
  <div class="form-group">
    <%= form.label :listing_title %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :estimated_budget %>:
    <%= form.number_field :price, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :currently_available? %>
    <%= form.check_box :available %>
  </div>
  <div class="form-group">
    <%= form.label :description_of_job %>:
    <%= form.text_field :description, class: 'form-control' %>
    
  <div class="form-group">
    <%= form.submit id: "submit" %>
  </div>

    <%= form. label :picture %>
    <%= form.file_field :picture, accept: 'image/png, image/jpg, image/jpeg' %>
  <% end %>
</div>





